{
  "compilerOptions": {
    "lib": ["ES2016", "DOM", "ES2017"],
    "jsx": "react",
    "noEmit": true,
    "target": "es6",
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "noUnusedParameters": false,
    "resolveJsonModule": true,
  },
  "include": ["**/*.js"],
  "exclude": ["node_modules", "out"]
}
